@{

   ViewBag.Title="lista de empleados con EF";
   }

   @if(Model!=null){

        using (Html.BeginForm())
        {
            <select id="selAreas" onchange="SetArea(this.value);">

                <option value="0">selección empleados</option>
                @foreach (DAL.Modelo.Empleado empleados in Model)
                {
                    <option value="@empleados.IdAreas">@empleados.Nombre></option>
                }

            </select>

            

        }
   }

  

